{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>renovatebot/.github',
    ':semanticCommitsDisabled',
  ],
  packageRules: [
    {
      matchPackagePatterns: '^(@angular|typescript)',
      groupName: 'angular packages',
      excludePackageNames: 'foo',
    },
    {
      matchPackageNames: [
        'foo',
      ],
      matchDepTypes: [
        'bar',
      ],
      automerge: true,
    },
    {
      matchDepTypes: [
        'peerDependencies',
      ],
      rangeStrategy: 'widen',
    },
    {
      matchDepTypes: [
        'dependencies',
      ],
      rangeStrategy: 'widen',
    },
    {
      matchDepTypes: [
        'engines',
      ],
      rangeStrategy: 'auto',
    },
    {
      matchDepTypes: [
        'optionalDependencies',
      ],
      rangeStrategy: 'widen',
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      rangeStrategy: 'widen',
    },
    {
      respectLatest: false,
      matchDepTypes: [
        'optionalDependencies',
      ],
    },
  ],
}
